<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/product_list_row_thumbnail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_person_40dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_toEndOf="@+id/product_list_row_thumbnail"
            android:layout_toRightOf="@+id/product_list_row_thumbnail"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/client_list_row_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Razón social"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000000"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/client_list_row_client_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="#Cliente"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="12dp"
                    android:textStyle="italic" />
            </LinearLayout>

            <TextView
                android:id="@+id/client_list_row_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dirección"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="13dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/product_list_row_thumbnail"
            android:layout_toRightOf="@+id/product_list_row_thumbnail"
            android:layout_weight="2"
            android:orientation="vertical"
            android:gravity="center_vertical|right">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/client_list_row_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="Distancia"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="12dp" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="3dp"
                    android:src="@drawable/ic_navigation_grey_24dp" />

            </LinearLayout>

            <!-- ELIMINAR!!! -->
           <!-- <Button
                android:id="@+id/client_list_goto_order"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/place_autocomplete_powered_by_google_height"
                android:textSize="10dp"
                android:text="Ver pedido"
                android:textColor="#555" /> -->

        </LinearLayout>

        <ImageView
            android:id="@+id/indicatorClientVisited"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_assistant_photo_24dp"
            android:layout_marginLeft="10dp" />

    </LinearLayout>

</RelativeLayout>

